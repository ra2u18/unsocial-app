{
	"name": "auth",
	"version": "1.0.0",
	"description": "Authentication microservice for our social media app",
	"main": "index.js",
	"scripts": {
		"lint": "eslint ./src/**/*.ts",
		"prettier": "npx prettier --check ./src/**/*.ts",
		"prettier:fix": "npx prettier --write ./src/**/*.ts",
		"start:dev": "nodemon src/server.ts",
		"start": "",
		"test": "jest --watch --detectOpenHandles"
	},
	"keywords": [],
	"author": "<Rick; netlemon@gmail.com>",
	"license": "ISC",
	"dependencies": {
		"@koa/router": "^12.0.0",
		"koa": "^2.13.4",
		"koa-body": "^5.0.0",
		"winston": "^3.8.2"
	},
	"devDependencies": {
		"@types/jest": "^29.1.1",
		"@types/koa": "^2.13.5",
		"@types/koa__router": "^12.0.0",
		"@types/node": "^18.7.23",
		"@types/semver": "^7.3.12",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^5.38.1",
		"@typescript-eslint/parser": "^5.38.1",
		"eslint": "^8.24.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jest": "^27.0.4",
		"husky": "^4.3.0",
		"jest": "^29.1.1",
		"lint-staged": "^13.0.3",
		"nodemon": "^2.0.20",
		"prettier": "^2.7.1",
		"supertest": "^6.2.4",
		"ts-jest": "^29.0.3",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.0",
		"typescript": "^4.8.4"
	},
	"lint-staged": {
		"src/**/*.ts": [
			"npm run prettier",
			"npm run lint"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"collectCoverage": true,
		"collectCoverageFrom": [
			"./src/**/*.{ts,js}",
			"!**/node_modules/**",
			"!**/build/**",
			"!**/coverage/**"
		],
		"transform": {
			"\\.ts$": "ts-jest"
		},
		"coverageThreshold": {
			"global": {
				"branches": 100,
				"functions": 100,
				"lines": 100,
				"statements": 100
			}
		},
		"coverageReporters": [
			"text",
			"text-summary"
		],
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)x?$",
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/build/",
			"/coverage/"
		]
	}
}
